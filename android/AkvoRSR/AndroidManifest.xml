<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.akvo.rsr.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="6"
        android:targetSdkVersion="6" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.akvo.rsr.android.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.akvo.rsr.android.ProjectListActivity"
            android:label="@string/title_activity_project_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.akvo.rsr.android.LoginActivity" />
        </activity>
        <activity
            android:name="org.akvo.rsr.android.ProjectDetailActivity"
            android:label="@string/title_activity_project_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.akvo.rsr.android.ProjectListActivity" />
        </activity>

        <service
            android:name="org.akvo.rsr.android.service.SubmitProjectUpdateService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>