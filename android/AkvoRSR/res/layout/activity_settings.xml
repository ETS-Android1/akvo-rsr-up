<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:title="Settings" >

  <PreferenceCategory
     android:title="Options">

    <CheckBoxPreference
       android:key="setting_send_images"
       android:title="Send images"
       android:summary="Embeds images in uploads"
       android:defaultValue="true"
       />
    <CheckBoxPreference
       android:key="setting_delay_image_fetch"
       android:title="Delay fetching of images"
       android:summary="Do not fetch thumbnails during a refresh. This will speed it up, but they will be unavailable when offline."
       android:defaultValue="false"
       />
     <CheckBoxPreference
       android:key="setting_debug"
       android:title="Debug"
       android:summary="Show extra debug info"
       android:defaultValue="false"
       />
    <Preference
       android:key="data_host"
	   android:title="Data server"
    	/>
    
  </PreferenceCategory>

